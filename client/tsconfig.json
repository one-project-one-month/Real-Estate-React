{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/": ["./src"],
      "@ui": ["../packages/ui/src/"],
      "@utils": ["../packages/utils/src/"],
      "@api": ["../packages/api/src/"],
      "@mocks": ["../mocks/"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
